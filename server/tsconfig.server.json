{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",  // Changed to "." to include files in the server folder
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["*.ts", "config/*.ts"],  // Include .ts files in the root and config folder
  "exclude": ["node_modules", "dist"]
}
